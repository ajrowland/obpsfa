---
import Image from "@components/Image.astro";
import { formatDate } from "@lib/util";
import { createPath } from "@lib/util";

const { title, slug, date, mainImage, body, seo } = Astro.props;

const displayImage = mainImage || seo.image;

const Element = body?.length > 0 ? "a" : "div";
---

<Element href={createPath(slug)} class="news-item">
  <div class="news-item__text">
    <h3 class="news-item__title">{title}</h3>
    <div class="news-item__date">
      <time>{formatDate(date)}</time>
      by {seo.authorDisplay || seo.author}
    </div>
    <p>{seo.description}</p>
    {body && <p class="news-item__more">Read more</p>}
  </div>
  <Image
    image={displayImage}
    width={400}
    height={300}
    cssClass="news-item__image"
    hideCaption={true}
    alt={displayImage?.alt || seo.description}
  />
</Element>

<style>
  @media >tablet {
    a.news-item:hover {
      transform: scale(1.02);
    }
  }

  .news-item {
    display: block;
    background-color: #666;
    color: #fff;
    text-decoration: none;
    transition: all 0.25s ease-in-out;
    margin: 0 calc(var(--gutter) * -1);
    overflow: hidden;

    &:nth-child(even) {
      flex-direction: row-reverse;
    }

    &__date {
      font-size: 0.8rem;
      display: block;
      margin: 0 var(--gutter);
    }

    h3 {
      background: var(--colour-red);
      padding: var(--gutter);
      margin-top: 0;

      &:before,
      &:after {
        background: var(--colour-red);
      }

      &:before {
        left: calc(var(--gutter * -1));
      }

      @media >tablet {
        padding: 10px 20px;
      }
    }

    p {
      margin: 20px;
    }

    :global(img) {
      display: block;
      height: auto;
    }

    &__more {
      font-weight: bold;
    }

    :global(&__image) {
      position: relative;
    }

    :global(&__image__attribution) {
      display: inline-block;
      background: #fff;
      color: var(--colour-grey);
      position: absolute;
      bottom: 0;
      right: 0;
      padding: 5px var(--gutter);
    }

    @media >tablet {
      display: flex;
      margin: calc(var(--gutter) * 2) 0;
      background: #fff;

      &__text {
        width: 55%;
        background: #666;
      }

      :global(&__image) {
        width: 45%;
        background: #fff;

        :global(img) {
          height: 100%;
          object-fit: cover;
        }
      }

      :global(&__image__attribution) {
        right: auto;
      }
    }
  }
</style>
